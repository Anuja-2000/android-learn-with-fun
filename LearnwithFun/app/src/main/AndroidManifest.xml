<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.learnwithfun">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_new"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service android:enabled="true" android:name=".util.BackgroundMusicService" />
        <service android:enabled="true" android:name=".util.ButtonClickSoundService" />
        <activity
            android:name=".view.activity.ShowWordsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.activity.SelectCharacterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.activity.SelectLanguageActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>